<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.ChangePasswordActivity">

    <Button
        android:id="@+id/ButtonChangePassword"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/custom_button"
        android:text="@string/chgPassword"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputChangePassword2"
        tools:ignore="TextContrastCheck" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputCurrentPassword"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:hint="Das aktuelle Passwort"
        app:boxStrokeColor="?attr/colorAccent"
        app:boxStrokeErrorColor="?attr/colorSecondaryVariant"
        app:endIconMode="password_toggle"
        app:endIconTint="?attr/colorSecondaryVariant"
        app:errorEnabled="true"
        app:helperText="@string/required"
        app:helperTextTextColor="?attr/colorPrimary"
        app:hintTextColor="?attr/colorSecondaryVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/ic_baseline_lock_24"
        app:startIconTint="?attr/colorSecondaryVariant">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/currentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:lines="1"
            android:singleLine="true"
            tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputChangePassword1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:hint="Das neue Passwrot"
        app:boxStrokeColor="?attr/colorAccent"
        app:boxStrokeErrorColor="?attr/colorSecondaryVariant"
        app:endIconMode="password_toggle"
        app:endIconTint="?attr/colorSecondaryVariant"
        app:errorEnabled="true"
        app:helperText="@string/required"
        app:helperTextTextColor="?attr/colorPrimary"
        app:hintTextColor="?attr/colorSecondaryVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputCurrentPassword"
        app:layout_constraintVertical_bias="0.050000012"
        app:startIconDrawable="@drawable/ic_baseline_lock_24"
        app:startIconTint="?attr/colorSecondaryVariant">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ChangePassword1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:lines="1"
            android:singleLine="true"
            tools:ignore="TextContrastCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputChangePassword2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:hint="Das Passwort wiederholen!"
        app:boxStrokeColor="?attr/colorAccent"
        app:boxStrokeErrorColor="?attr/colorSecondaryVariant"
        app:endIconMode="password_toggle"
        app:endIconTint="?attr/colorSecondaryVariant"
        app:errorEnabled="true"
        app:helperText="@string/required"
        app:helperTextTextColor="?attr/colorPrimary"
        app:hintTextColor="?attr/colorSecondaryVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textInputChangePassword1"
        app:startIconDrawable="@drawable/ic_baseline_lock_24"
        app:startIconTint="?attr/colorSecondaryVariant">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ChangePassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:lines="1"
            android:singleLine="true"
            tools:ignore="TextContrastCheck" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>